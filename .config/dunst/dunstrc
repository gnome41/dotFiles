  indicate_hidden = yes
  alignment = center
  line_height = 0
  markup = full
  padding = 8
  separator_color = "#585858"
  separator_height = 2
  show_age_threshold = 30
  sort = yes
  stack_duplicates = true
  transparency = 20
  word_wrap = yes

  mouse_left_click = close_current
  mouse_middle_click = close_all
